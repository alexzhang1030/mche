{
  "name": "mche",
  "type": "module",
  "version": "0.9.2",
  "packageManager": "pnpm@10.10.0",
  "description": "Message Channel Helpers",
  "author": "alexzhang1030",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexzhang1030/mche.git"
  },
  "keywords": [
    "webrtc",
    "helpers",
    "peer",
    "message channel"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./server": {
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest",
    "lint": "NODE_OPTIONS=--import=tsx eslint --config=eslint.config.ts .",
    "prepare": "simple-git-hooks",
    "build": "tsup",
    "prepublishOnly": "pnpm run build",
    "release": "vitest run && bumpp --commit \"chore: release v%s\" --push --tag && pnpm publish"
  },
  "dependencies": {
    "wshe": "^2.2.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "bumpp": "^10.1.0",
    "eslint": "^9.26.0",
    "lint-staged": "^16.0.0",
    "simple-git-hooks": "^2.13.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "pnpm lint --fix"
    ]
  }
}
